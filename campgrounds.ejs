<%- include ("partials/header.ejs") %>
<div class="container">
<header class="jumbotron">
	<div class="container">
	<h1>Welcome to YelpCamp!</h1>
	<p>Let's get on-board with discovering some of our hand-picked campgrounds collection!</p>
	<p><a class="btn btn-primary btn-large" href="/campgrounds/new"> Add a campground</a></p>
	</div>
</header>

<div class="row text-center" style="display: flex; flex-wrap:wrap" >
<% for(var i=0;i<campgrounds.length;i++){ %>
	<div class="col-md-3 col-sm-6">
		<div class="thumbnail">
			<img src="<%=campgrounds[i].image%>">
			<div class="caption" >
				<h4> <%= campgrounds[i].name %> </h4>
			</div>
		</div>
	</div>
	
<% }; %>
</div>
</div>
<%- include ("partials/footer.ejs") %>
	
